generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  LICHESS
  CHESSCOM
}

enum TimeClass {
  BULLET
  BLITZ
  RAPID
  CLASSICAL
  UNKNOWN
}

enum PuzzleType {
  AVOID_BLUNDER
  PUNISH_BLUNDER
}

model User {
  id               String   @id @default(uuid()) @db.Uuid
  email            String   @unique
  emailVerified    DateTime?
  name             String?
  image            String?
  lichessUsername  String?
  chesscomUsername String?
  preferences      Json     @default(dbgenerated("'{}'::jsonb"))
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  games          AnalyzedGame[]
  puzzles        Puzzle[]
  puzzleAttempts PuzzleAttempt[]

  // NextAuth (Auth.js) relations
  accounts Account[]
  sessions Session[]
}

model AnalyzedGame {
  id               String    @id @default(uuid()) @db.Uuid
  userId           String    @db.Uuid
  provider         Provider
  externalId       String
  url              String?
  pgn              String    @db.Text
  playedAt         DateTime
  timeClass        TimeClass
  rated            Boolean?
  result           String?
  termination      String?
  whiteName        String
  whiteRating      Int?
  blackName        String
  blackRating      Int?
  openingEco       String?
  openingName      String?
  openingVariation String?
  analysis         Json
  analyzedAt       DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  puzzles Puzzle[]

  @@unique([userId, provider, externalId])
  @@index([userId])
  @@index([provider, externalId])
}

model Puzzle {
  id               String     @id @default(uuid()) @db.Uuid
  userId           String     @db.Uuid
  gameId           String     @db.Uuid
  sourcePly        Int
  fen              String
  type             PuzzleType
  severity         String?
  bestMoveUci      String
  bestLine         Json
  score            Json
  tags             String[]   @default([])
  openingEco       String?
  openingName      String?
  openingVariation String?
  label            String?
  createdAt        DateTime   @default(now())

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  game     AnalyzedGame    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  attempts PuzzleAttempt[]

  @@unique([gameId, sourcePly, fen])
  @@index([userId])
  @@index([gameId])
}

model PuzzleAttempt {
  id          String   @id @default(uuid()) @db.Uuid
  puzzleId    String   @db.Uuid
  userId      String   @db.Uuid
  attemptedAt DateTime @default(now())
  userMoveUci String
  wasCorrect  Boolean
  timeSpentMs Int?

  puzzle Puzzle @relation(fields: [puzzleId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([puzzleId])
  @@index([userId])
}

// NextAuth (Auth.js) Prisma Adapter models
model Account {
  id                String  @id @default(cuid())
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
